.content{
    padding: 10rpx 30rpx;
}
.testsite_form{
    padding: 40rpx 0;
}
.section,.section2{
    background-color: #fff;
    margin: 20rpx auto;
    width: 80%;
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 10rpx;
    border: solid 1rpx #ccc;
}
.section2{
    margin-top: 30rpx;
}
.tips{
    font-size: 32rpx;
    text-align: center;
}
